  "version": "0.1.0",
  "compounds": [],
  "configurations": [
    {
      "type": "node",
      "name": "Local Run",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "server_type": "local"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "=================================="
    },
    {
      "name": "Run Docker",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "stop-and-start-docker",
      "program": "${workspaceFolder}/.vscode/empty.js"
    },
    {
      "name": "Stop Docker",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "docker-compose-down",
      "program": "${workspaceFolder}/.vscode/empty.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "=================================="
    }
  ],
  "inputs": []
}
