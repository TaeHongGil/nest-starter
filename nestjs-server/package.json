{
  "name": "nest-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest Starter",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --builder swc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm run prebuild && nest start --builder swc --watch",
    "start:debug": "pnpm run prebuild && nest start --debug --builder swc --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "swagger": "ts-node --transpile-only -r tsconfig-paths/register src/swagger/swagger-main.ts",
    "test": "node ./node_modules/jest/bin/jest.js --max-old-space-size=4096 --passWithNoTests --logHeapUsage",
    "test:all": "pnpm run test ./src"
  },
  "dependencies": {
    "@bull-board/api": "^6.11.1",
    "@bull-board/express": "^6.11.1",
    "@bull-board/nestjs": "^6.11.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/platform-socket.io": "^11.1.5",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.1.5",
    "@slack/web-api": "^7.9.3",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "bullmq": "^5.56.5",
    "cache-manager": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cron": "^4.3.2",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.5",
    "googleapis": "^152.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.4",
    "nest-winston": "^1.10.2",
    "redis": "^5.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "ua-parser-js": "^2.0.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.5",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.1",
    "@swc/jest": "^0.2.39",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-promise": "^7.2.1",
    "figlet": "^1.8.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.8.3"
  },
  "jest": {
    "clearMocks": true,
    "resetMocks": true,
    "testPathIgnorePatterns": [],
    "testTimeout": 15000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@root(.*)$": "<rootDir>/$1"
    }
  }
}
