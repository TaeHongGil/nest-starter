  "version": "0.1.0",
  "compounds": [],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "┏━━━━━━━━━━━ Nest Server ━━━━━━━━━━━┓"
    },
    {
      "type": "node",
      "name": "┃Local API Server Run",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start:debug"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "zone": "local",
        "server_type": "api"
      }
    },
