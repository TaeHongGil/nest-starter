  "version": "0.1.0",
  "compounds": [],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "┏━━━━━━━━━━━ Nest Server ━━━━━━━━━━━┓"
    },
    {
      "type": "node",
      "name": "┃Local API Server Run",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "server_type": "local",
        "mode": "api"
      }
    },
    {
      "type": "node",
      "name": "┃Local Scoket Server Run",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "server_type": "local",
        "mode": "socket"
      }
    },
    {
      "type": "node",
      "name": "┃Local Message Queue Server Run",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "server_type": "local",
        "mode": "mq"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "┃━━━━━━━━━━━━━━━━━━━━━━━━━━━━┃"
    },
    {
      "name": "┃Run Docker DB",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "db-compose-up",
      "program": ""
    },
    {
      "name": "┃Stop Docker DB",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "db-compose-down",
      "program": ""
    },
    {
      "type": "node",
      "request": "launch",
      "name": "┃━━━━━━━━━━━━━━━━━━━━━━━━━━━━┃"
    },
    {
      "name": "┃Run Docker ELK Stack",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "elk-compose-up",
      "program": ""
    },
    {
      "name": "┃Stop Docker ELK Stack",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "elk-compose-down",
      "program": ""
    },
    {
      "type": "node",
      "request": "launch",
      "name": "┃━━━━━━━━━━━━━━━━━━━━━━━━━━━━┃"
    },
    {
      "type": "node",
      "name": "┃Swagger Run Watch",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "swagger"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "env": {
        "server_type": "local",
        "mode": "mq"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "┗━━━━━━━━━━━ Nest Server ━━━━━━━━━━━┛"
    },
  ],
  "inputs": []
}