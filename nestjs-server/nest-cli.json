{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "./env/*.json",
        "outDir": "./dist"
      }
    ]
  }
}
